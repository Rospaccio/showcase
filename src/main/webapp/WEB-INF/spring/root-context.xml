<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Root Context: defines shared resources visible to all other web components -->

	<bean id="placeholder"
		class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>classpath:/showcase.properties</value>
			</list>
		</property>
	</bean>

	<bean name="sessionUserInjectorFilter" class="org.merka.showcase.filter.SessionUserInjectorFilter">
		<property name="entityManagerFactory" ref="entityManagerFactory"></property>
	</bean>

	<bean name="entityManagerFactory" class="javax.persistence.Persistence"
		factory-method="createEntityManagerFactory">
		<constructor-arg index="0" value="org.merka.showcase.jpa"></constructor-arg>
	</bean>
	
	<bean id="userService" class="org.merka.showcase.service.UserService" scope="singleton">
		<property name="entityManagerFactory" ref="entityManagerFactory"></property>
	</bean>

</beans>
